		players[6] = "R Jadeja";
		players[7] = "Hardik";
		players[8] = "Bumrah";
		players[9] = "B Kumar";
		players[10] = "MD Shami";

	 this->isFirstInnings=false;
	 teamA.name="Team-A";
	 teamB.name="Team-B";
}

